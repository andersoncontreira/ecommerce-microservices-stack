@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

'-----------------------------------------
'Personas
'-----------------------------------------
Person(user, "Customer", "People that need products")
Person(admin, "Administrator", "People that administrates the system")

'-----------------------------------------
'Sistemas
'-----------------------------------------
System(store, "Furni E-Commerce", "System that sells furniture")

'-----------------------------------------
'Sistemas externos
'-----------------------------------------
System_Ext(erp, "ERP Totvs", "System that administrates the store")
System_Ext(correios_api, "API Correios", "System that execute the shipping tracking")

Rel(user, store, "View products, do payments, show orders, buy bew products")
Rel(admin, store, "Manage products, manage orders, manage customers")

Rel(store, erp, "Sync product orders, sync payment, generate invoices")
Rel(store, correios_api, "Get shipping tracking")

SHOW_LEGEND()
@enduml